{
  "expo": {
    "name": "Pagalay",
    "slug": "pagalay-bolivia",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#2E7D32"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.pagalay.bolivia"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#2E7D32"
      },
      "package": "com.pagalay.bolivia",
      "permissions": [
        "android.permission.CAMERA"
      ]
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Pagalay to access your camera to scan QR codes for payments."
        }
      ],
      [
        "expo-barcode-scanner",
        {
          "cameraPermission": "Allow Pagalay to use the camera to scan payment QR codes."
        }
      ]
    ],
    "scheme": "pagalay"
  }
}
