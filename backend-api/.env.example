# Configuración del Backend de Pagalay

# Entorno
NODE_ENV=development

# Puerto del servidor
PORT=5000

# Base de datos MongoDB
MONGODB_URI=mongodb://localhost:27017/pagalay

# JWT Secret para autenticación
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# Redis para cache (opcional)
REDIS_URL=redis://localhost:6379

# URLs de clientes permitidos (separados por comas)
CLIENT_URLS=http://localhost:3000,http://localhost:19006

# Configuración de Polygon/Ethereum
POLYGON_RPC_URL=https://polygon-rpc.com/
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com/
CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890
PRIVATE_KEY=your_private_key_for_backend_operations

# APIs externas
COINGECKO_API_KEY=your_coingecko_api_key
BCB_API_KEY=your_banco_central_bolivia_api_key

# Notificaciones Push (Firebase)
FIREBASE_ADMIN_KEY=your_firebase_admin_key_json

# SMS Provider (para verificación de teléfono)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Email Provider (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Configuración de archivos
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Configuración de tasas de cambio
EXCHANGE_RATE_UPDATE_INTERVAL=60000
DEFAULT_SLIPPAGE=0.5

# Configuración de límites
DEFAULT_DAILY_LIMIT=10000
MAX_TRANSACTION_AMOUNT=50000
MIN_TRANSACTION_AMOUNT=1

# Logs
LOG_LEVEL=info
LOG_FILE=./logs/pagalay.log
